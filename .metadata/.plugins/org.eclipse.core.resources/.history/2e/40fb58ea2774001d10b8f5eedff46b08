public class MeatLoversPizza extends Pizza {

    /**
     * When you create a new MeatLoversPizza
     * set the size immediately to LARGE.
     * Add 2 toppings which are PEPPERONI and SAUSAGE
     */
    public MeatLoversPizza() {
        setSize(Size.LARGE);
        addTopping(Topping.PEPPERONI);
        addTopping(Topping.SAUSAGE);
    }

    // Return the constant price of $18
    @Override
    public double getPrice() {
        return 18;
    }

    // Display Meat Lovers Pizza to show to the user that this is a special pizza
    // and call the display() method of super class.
    @Override
    public void display() {
        System.out.println("Meat Lovers Pizza");
        super.display();
    }
}